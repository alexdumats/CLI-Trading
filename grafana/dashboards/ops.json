  "panels": [
    {
      "type": "stat",
      "title": "Stream Pending (All)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "sum(stream_pending_count)",
          "legendFormat": "pending"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] }, "colorMode": "value", "graphMode": "area" }
    },
    {
      "type": "table",
      "title": "Stream Pending by Stream/Group",
      "gridPos": { "x": 8, "y": 0, "w": 16, "h": 6 },
      "targets": [
        { "expr": "stream_pending_count", "legendFormat": "{{stream}}/{{group}}" }
      ],
      "options": { "showHeader": true }
    },
    {
      "type": "stat",
      "title": "Services Down",
      "gridPos": { "x": 0, "y": 6, "w": 6, "h": 6 },
      "targets": [
        { "expr": "count(max by (instance) (up == 0))", "legendFormat": "down" }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] } }
    },
    {
      "type": "gauge",
      "title": "HTTP p95 latency (s)",
      "gridPos": { "x": 6, "y": 6, "w": 10, "h": 6 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["last"] }, "min": 0, "max": 5 }
    },
    {
      "type": "graph",
      "title": "CPU & Memory",
      "gridPos": { "x": 16, "y": 6, "w": 8, "h": 6 },
      "targets": [
        { "expr": "sum by (instance) (process_resident_memory_bytes)", "legendFormat": "mem {{instance}}" },
        { "expr": "sum by (instance) (process_cpu_seconds_total)", "legendFormat": "cpu {{instance}}" }
      ]
    }
  ],
  "schemaVersion": 35,
  "style": "dark",
  "tags": ["ops"],
  "templating": { "list": [] },
  "time": { "from": "now-6h", "to": "now" },
